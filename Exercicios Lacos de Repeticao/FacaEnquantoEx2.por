programa
{

    funcao inicio()
    {
        inteiro x, contador=0, soma =0

        escreva ("Digite um número: ")
        leia(x)

        faca {

            soma = soma+x
            x=x-1
		  
        } enquanto (x>0)

        escreva ("\nA soma total é de: " + soma)

    }
}
